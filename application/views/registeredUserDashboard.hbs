<div class="tab-content">
    <div class="tab-pane fade show active" id="items_forSale_tab">
        {{!-- Container for the selling section --}}
        <div class="sell_container">
            <h2>Items You are Selling </h2>
            <ul class="selling">
                <li class="table-header">
                    <div class="col col-1">Name</div>
                    <div class="col col-2">Status</div>
                    <div class="col col-3">Category</div>
                    <div class="col col-4">Price</div>
                    <div class="col col-5">
                        Edit/Remove
                    </div>
                </li>
                {{#if product}}
                {{#each product}}
                <li class="table-row">
                    <div class="col col-1">{{this.name}}</div>
                    <div class="col col-2">{{this.status}}</div>
                    <div class="col col-3">{{this.category}}</div>
                    <div class="col col-4">${{this.price}}</div>
                    <div class="col col-5">
                        <button type="button" class="btn btn-secondary btn-sm">Edit</button>
                        <button type="button" class="btn btn-danger btn-sm">Remove</button>
                    </div>
                </li>
                {{/each}}
                {{else}}
                <li class="table-row">
                    No active listings.
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
