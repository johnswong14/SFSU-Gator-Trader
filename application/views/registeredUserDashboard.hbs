</ul>


<div class="tab-content">
    <div class="tab-pane fade show active" id="items_forSale_tab">

        {{!-- Container for the selling section --}}
        <div class="sell_container">
            <h2>Items You are Selling</h2>
            <ul class="selling px-0">
                <li class="table-header">
                    <div class="col col-6">Name</div>
                    <div class="col col-1">Price</div>
                    <div class="col col-2">Status</div>
                    <div class="col col-3">Actions</div>
                </li>
                {{#if product}}
                {{#each product}}
                <li class="table-row">
                    <div class="col col-6"><span class="selling_info">Name:&nbsp; </span><a
                            href="/products/{{this.pid}}" target="_blank">{{this.name}}</a> </div>
                    <div class="col col-1"><span class="selling_info">Price:&nbsp; </span>${{this.price}}</div>
                    {{#if (eq this.status "approved")}}
                    <div class="col col-2"><span style="color:black;" class="selling_info">Status:&nbsp;
                        </span>{{this.status}}</div>
                    {{else}}
                    <div class="col col-2" style="color: red;"><span style="color:black;"
                            class="selling_info">Status:&nbsp; </span>{{this.status}}</div>
                    {{/if}}
                    <div class="col-lg-3 selling_btn">
                        <a href="/products/{{this.pid}}/edit" class="btn btn-secondary btn-sm">Revise</a>&nbsp;
                        <a href="/products/{{this.pid}}/end" class="btn btn-danger btn-sm">End Listing</a>
                    </div>
                </li>
                {{/each}}
                {{else}}
                <li class="table-row">
                    No active listings.
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
    <div class="tab-pane fade" id="dashboard_messages_tab">
        {{!-- Container for the messages section --}}
        <div class="messages_container">
            <h2>Your Messages</h2>
            <ul class="messages px-0">
                <li class="table-header">
                    <div class="col-lg-3">Item</div>
                    <div class="col-lg-2">From</div>
                    <div class="col-lg-3 message_last">Last Message</div>
                    <div class="col-lg-2 message_date">Received</div>
                    <div class="col-lg-2 message_btn">Chat</div>
                </li>
                {{#if inquiry}}
                {{#each inquiry}}
                <li class="table-row">
                    <div class="col-lg-3 message_item">
                        <span class="message_info">Item:&nbsp; </span><a href="/products/{{this.pid}}" target="_blank">{{this.productName}}</a>
                    </div>
                    <div class="col-lg-2 message_from">
                        <span class="message_info">From:&nbsp; </span>{{#if (eq this.messageFromSid @root.loggedIn.sid)}}You{{else}}{{usernameOf this.messageFromEmail}}{{/if}}
                    </div>
                    <div class="col-lg-3 message_last">{{this.lastMessage}}</div>
                    <div class="col-lg-2 message_date">{{this.time}}</div>
                    <div class="col-lg-2 message_btn">
                        <a href="/products/{{this.pid}}/inquiry?id={{this.inquiryId}}" class="btn btn-primary btn-sm" target="_blank">Open Chat</a>
                    </div>
                </li>
                {{/each}}
                {{else}}
                <li class="table-row">
                    No inquiries.
                </li>
                {{/if}}
            </ul>
        </div>
    </div>
</div>