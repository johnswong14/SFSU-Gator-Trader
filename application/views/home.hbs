<div class="container home mt-4">
    <!-- Display logout message -->
    <div>
        {{> message}}
    </div>
    <div class="header">
        <h1>Welcome to the Official Gator Trader</h1>
    </div>
    <div class="row home-page-icons justify-content-center">
        {{#each category}}
        <div class="col-7 col-sm-5 col-md-4 col-lg-3">
            <div class="card home-card img-fluid">
                <img class="card-img home-image" src="/images/main/{{this.imgFileName}}" alt="Card image">
                <div class="card-img-overlay">
                    <h4 class="card-title home-page text-center">{{this.name}}</h4>
                    <a href="/search?c={{this.cid}}" class="stretched-link"></a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>