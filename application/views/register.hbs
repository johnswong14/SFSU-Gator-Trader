<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto">
            <div class="header">
                <h1>Create account</h1>
            </div>

            <!-- Display any error or success messages -->
            <div>
                {{> message}}
            </div>

            <!-- Register form -->
            <form action="/user/register" method="POST">
                <div class="form-group">
                    <input type="email" id="username" name="username" class="form-control"
                        placeholder="Enter SFSU email" value="{{dataPassedBack.username}}" maxlength="40" required />
                </div>
                <div class="form-group">
                    <input type="text" id="sid" name="sid" class="form-control" placeholder="Enter SFSU ID"
                        value="{{dataPassedBack.sid}}" maxlength="9" required />
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="Create password (8-20 characters)" minlength="8" maxlength="20" required />
                </div>
                <div class="mb-3" id="passwordMsg"></div>
                <div class="form-group">
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
                        placeholder="Confirm password" minlength="8" maxlength="20" required />
                </div>
                <div class="mb-3" id="confirmPasswordMsg"></div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="terms" required>
                    <label class="form-check-label" for="terms">I agree to the <a href="#"
                            style="text-decoration: underline;">Terms</a> and
                        that I have read the <a href="#" style="text-decoration: underline;">Data Use Policy</a>,
                        including <a href="#" style="text-decoration: underline;">Cookie Use</a>.</label>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" name="captcha" required>
                    <label class="form-check-label" for="captcha">I am not a robot.</label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block" id="register">
                        Register
                    </button>
                </div>
            </form>
            <h6>
                <p>Already have an account? <a href="/user/login" style="text-decoration: underline;">Sign in</a></p>
            </h6>
        </div>
    </div>
</div>