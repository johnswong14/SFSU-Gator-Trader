    <table id="search-results" style="width: 70%">
        {{#each product}}
        <tr>
            <td>
                <div class="col-sm-12">
                    <div class="results_column">
                        <div class="card">
                            <div class="card_body">
                                <div class="photo">
                                    <div class="image">
                                        <img src="https://thumbs-prod.si-cdn.com/mHAHLSMfYOtZJs_PDnkqAgPFd6Q=/fit-in/1600x0/https://public-media.si-cdn.com/filer/00/a1/00a1f7bf-556f-48ef-a4da-10ea981a9337/mona.jpg"
                                            alt="Picture">
                                    </div>
                                </div>
                                <div class="info">
                                    <div class="featured_text">
                                        <h1><a href="/products/{{this.pid}}">{{this.name}}</a></h1>
                                        <p class="sub">Nice Painting</p>
                                        <p class="price">${{this.price}}</p>
                                    </div>
                                    <div class="description">
                                        <p>{{this.description}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="card_footer">
                                <div class="seller">
                                    <p>Seller: </p>
                                    <h3>{{this.seller}}</h3>
                                    <div class="reviews">
                                        <ul class="stars">
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star"></i></li>
                                            <li><i class="fa fa-star-o"></i></li>
                                        </ul>
                                        <span>(10 reviews)</span>
                                    </div>
                                    <div class="action2">
                                        <button type="button">Contact Seller</button>
                                    </div>
                                </div>
                                <div class="action">
                                    <button type="button">Buy It Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </table>

    {{#if (gt pageCount 1)}}
    <nav aria-label="Results page navigation">
        <ul class="pagination justify-content-center">
            {{{pagination pageCount currentPage selectedCategory keyword}}}
        </ul>
    </nav>
    {{/if}}

    {{else}}
    <div class="col-sm-4" style="margin: auto;">
        <div class="results_column">
            <div class="card" style="">
                <h2>No results found for "{{keyword}}".</h2>
                <h5>Try checking your spelling or use more general terms</h5>
            </div>
        </div>
    </div>
    {{/if}}
