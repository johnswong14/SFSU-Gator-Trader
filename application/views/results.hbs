<!-- Results Info Bar -->
{{#if product}}
<div class="d-flex results-info">
    <div class="dropdown dropdown_sidebar">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            &#9776
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <div class="price_range_dd">
                <h4><b>Price</b></h4>
                <a class="dropdown-item" href="#" id="under25">Under $25</a>
                <a class="dropdown-item" href="#" id="25to50">$25 to $50</a>
                <a class="dropdown-item" href="#" id="50to200">$50 to $200</a>
                <a class="dropdown-item" href="#" id="over200">$200 and Above</a>
            </div>
            <div class="condition_dd">
                <h4><b>Condition</b></h4>
                <a class="dropdown-item" href="#" id="new">New</a>
                <a class="dropdown-item" href="#" id="used">Used</a>
            </div>
        </div>
    </div>
    <div class="mr-auto">
        {{{resultsInfo offset pageLimit totalProducts keyword}}}
    </div>
    <div class="results-sort-button-container">
        <button type="button" class="btn results-sort-button dropdown-toggle" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Sort by: 
            {{#if (eq searchCriteria.sortF "ltoh")}}
            Price: Low to High
            {{/if}}
            {{#if (eq searchCriteria.sortF "htol")}}
            Price: High to Low
            {{/if}}
            {{#if (eq searchCriteria.sortF "atoz")}}
            Alphabetically: A-Z
            {{/if}}
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" href="#" id="ltoh">Price: Low to High</a>
            <a class="dropdown-item" href="#" id="htol">Price: High to Low</a>
            <a class="dropdown-item" href="#" id="atoz">Alphabetically: A-Z</a>
        </div>
    </div>
</div>
{{/if}}

<div class="container-fluid mb-3">
    {{#if product}}

    <!-- Side Bar -->
    <div class="sidebar">
        <div class="price_range">
            <h4><b>Price</b></h4>
            <a href="#" class="under25">Under $25</a>
            <a href="#" class="25to50">$25 to $50</a>
            <a href="#" class="50to200">$50 to $200</a>
            <a href="#" class="over200">$200 and Above</a>
        </div>
        <div class="condition">
            <h4><b>Condition</b></h4>
            <a href="#" class="new">New</a>
            <a href="#" class="used">Used</a>
        </div>
    </div>

    <table id="search-results">
        {{#each product}}
        <tr>
            <td>
                <div class="results_card_container">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="results_image">
                                    <img width="150"
                                        src="https://thumbs-prod.si-cdn.com/mHAHLSMfYOtZJs_PDnkqAgPFd6Q=/fit-in/1600x0/https://public-media.si-cdn.com/filer/00/a1/00a1f7bf-556f-48ef-a4da-10ea981a9337/mona.jpg"
                                        alt="Picture">
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="info">
                                    <div class="featured_text">
                                        <h1><a href="/products/{{this.pid}}">{{this.name}}</a></h1>
                                        <div class="seller">
                                            <p>by {{this.seller}}</p>
                                        </div>
                                        <p class="price">${{this.price}}</p>

                                        <div class="description">
                                            <p>{{this.description}}</p>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="card_footer">
                                    <div class="contact_seller">
                                        <button class="button" onclick="openForm()">Contact Seller</button>
                                    </div>
                                    <!-- pop up messages -->
                                    <div class="chat-popup" id="myForm">
                                        <form action="/action_page.php" class="form-container">
                                            <h4>item decription goes here</h4>
                                            <h5>Seller's name goes here</h5>
                                            <textarea placeholder="Type message.." name="msg" required></textarea>
                                            <button type="submit" class="btn">Send</button>
                                            <button type="button" class="btn cancel"
                                                onclick="closeForm()">Close</button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        </div>
            </td>
        </tr>
        {{/each}}
    </table>

    {{#if (gt pageCount 1)}}
    <div class="pagination-container">
        <ul class="pagination justify-content-center">
            {{{pagination pageCount currentPage searchCriteria}}}
        </ul>
    </div>
    {{/if}}

    {{else}}
    {{#if searchCriteria.keyword}}
    <div class="card mx-auto mt-4" style="width: 50%;">
        <div class="px-3 py-3">
            <h3>No results for {{searchCriteria.keyword}}.</h3>
            <h6>Try checking your spelling or use more general terms</h6>
        </div>
    </div>
    {{else}}
    {{#if searchCriteria.selectedCategoryName}}
    <div class="card mx-auto mt-4" style="width: 50%;">
        <div class="px-3 py-3">
            <h3>No results for category, {{searchCriteria.selectedCategoryName}}.</h3>
            <h6>Please select another category</h6>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto mt-4" style="width: 50%;">
        <div class="px-3 py-3">
            <h3>No results.</h3>
            <h6>Try checking your spelling or use more general terms, or select another category</h6>
        </div>
    </div>
    {{/if}}
    {{/if}}
    {{/if}}
</div>